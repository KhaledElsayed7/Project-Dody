@model IEnumerable<DODY.Models.ViewModel>
@{
    //ViewBag.Title = "Index";
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>
</head>
<body>
    <div class="container-fluid py-4">
        <h4 class="text-center text-uppercase">Order List</h4>
        <table class="table table-striped table-bordered">
            <thead class="bg-dark text-white">

                <tr style="
        background-color: lightgreen;
        font-size: 16px;
        font-weight: 300;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">
                    <th>Pno</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Brand</th>
                    <th>Color</th>
                    <th>Pro_for</th>
                    <th>Department</th>
                    <th>Size</th>
                    <th>Qty</th>
                    <th>Total</th>
                    <th>Cid</th>
                    <th>Ono</th>
                    <th>OrderTime</th>
                </tr>
            </thead>
            <tbody>
               
                @foreach (var item in Model)
                {
                  
                    <tr>
                        <td>@item.product.Pno</td>
                        <td><img src="@Url.Content(@item.product.Image)" width="50" height="50" /></td>
                        <td>@item.product.Name</td>
                        <td>@item.product.Brand</td>
                        <td>@item.order.Color</td>
                        <td>@item.product.Pro_For</td>
                        <td>@item.product.Department</td>
                        <td>@item.order.Size</td>
                        <td>@item.order.Quantity</td>
                        <td>@item.order.Quantity * @item.product.UnitPrice </td>
                        <td style="color:cornflowerblue">@item.client.Cid</td>
                        <td>@item.order.Ono</td>
                        <td>@item.order.OrderTime</td>
                    </tr>


                }
            </tbody>
        </table>
    </div>
</body>
</html>

