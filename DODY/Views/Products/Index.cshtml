@model IEnumerable<DODY.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";    // if (Layout=null) =>The Properties of javascript and Bootstrap will be hidden in login page
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}
     <h4 style="padding-left:20px; text-decoration:none">Admin</h4>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
    </p>
    <div>
        <table class="table">
            <tr style="
        background-color: lightgreen;
        font-size: 16px;
        font-weight: 300;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">
                <th>
                    @Html.DisplayNameFor(model => model.Pno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Color)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Size)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pro_For)
                </th>
                @*<th style="padding-left:40px">
                    @Html.DisplayNameFor(model => model.Description)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Department)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UnitPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Brand)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pro_For)
            </td>
            @*<td style="padding-left:40px">
                @Html.DisplayFor(modelItem => item.Description)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                <img src="@Url.Content(item.Image)" width="50" height="50" multiple />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Pno }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Pno }, new { @class = "btn btn-danger" })|
                @Html.ActionLink("Details", "Details", new { id = item.Pno }, new { @class = "btn btn-default" })
            </td>
        </tr> 
            }

        </table>
    </div><hr />
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
    </p>

