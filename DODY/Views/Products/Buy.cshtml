@model IEnumerable<DODY.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";    // if (Layout=null) =>The Properties of javascript and Bootstrap will be hidden in login page
    
}

<h4 style="padding-left:20px; text-decoration:none">Buy</h4>

<div>
    <table class="table">
        <tr style="
        background-color: lightgreen;
        font-size: 16px;
        font-weight: 300;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    <img src="@Url.Content(item.Image)" width="50" height="50" />
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Pno }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Pno }, new { @class = "btn btn-danger" })
                </td>
            </tr>

        }

    </table>
</div>

<hr />

