@model IEnumerable<DODY.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutClient.cshtml";
}


<h4 style="color:limegreen;">Hello @Session["UserName"]</h4>

<p>
    @Html.ActionLink("Add New Order", "Create","Orders", null, new { @class = "btn btn-info" })
</p>
<table class="table">
    <tr style="background-color:lightgreen;font-style:italic; font-size:16px; font-weight:300; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">

        <th>
            @Html.DisplayNameFor(model => model.Ono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cid)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Mid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sid)
        </th>*@


    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cid)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Mid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sid)
            </td>*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Ono }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Ono }, new { @class = "btn btn-danger" })
                <a href="">Home</a>
            </td>
        </tr>
    }

</table>
