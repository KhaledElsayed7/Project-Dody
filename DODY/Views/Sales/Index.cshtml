@model IEnumerable<DODY.Models.Sale>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutClient.cshtml";
}

<h4 style="color:limegreen;">Hello @Session["UserName"]</h4>

<p>
    @Html.ActionLink("Add New Order","Create","Sales", null, new { @class = "btn btn-info" })
</p>
<table class="table">
    <tr style="background-color:lightgreen;font-style:italic; font-size:16px; font-weight:300; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">

        <th>
            @Html.DisplayNameFor(model => model.Sno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order_Count)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sold)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Canceled)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order_Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sold)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Canceled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Sno }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Sno }, new { @class = "btn btn-danger" })
                <a href="">Home</a>
            </td>
        </tr>
    }

</table>