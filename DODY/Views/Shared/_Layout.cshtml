<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link  href="~/Content/Style.css" rel="stylesheet"/>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div style=" background-color:royalblue; border:1px solid royalblue;"class="navbar navbar-inverse navbar-fixed-top" >
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <p style="color:lightgreen;
                          font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif ; 
                          font-size:16px; 
                          padding-top:13px;
                          opacity:.8;
                          padding-right:15px;
                          margin-left:0px">Clothes</p>
                @* @Html.ActionLink("Clothes", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@  
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Home", "HomePage", "Products")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Login", "Login", "Clients")</li>

                </ul>
                <div>
                    <datalist>
                        <option>Dress</option>
                        <option>Shirt</option>
                        <option>Jacket</option>
                    </datalist>
                    @*Search*@
                    <div class="input-group" id="Search" style="margin-top:7.5px; min-width:120px; min-height:20px;">
                        <span class="input-group-addon" id="sizing-addon2">@Session["productName"]</span>
                        @using (Html.BeginForm("Search", "Products", FormMethod.Post)) 
                        {
                        <input type="text" name="search" id="search" placeholder="Search" aria-describedby="sizing-addon2">
                        }
                    </div>
       
                </div>
            </div>
        </div>
  </div>
    <div class="container body-content" style=" margin-left:0px;">
        @*<div style="display:inline-block">

        </div>*@
        @*Very Important div Because it control " HomePage body and  Footer "*@

        @RenderBody()
        <hr />
        <footer>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
@*class="container body-content"*@