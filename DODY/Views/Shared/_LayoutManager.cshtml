<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div style="background-color:royalblue; color:white ; border:1px solid royalblue;" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <p style="color:lightgreen;
                          font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif ;
                          font-size:16px;
                          padding-top:13px;
                          opacity:.8;
                          padding-right:15px;
                          margin-left:0px">Clothes</p>
                @* @Html.ActionLink("Clothes", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                  
                    <li>@Html.ActionLink("product", "Index","Products")</li>
                    <li>@Html.ActionLink("Logout", "Login","Managers" )</li>
                    

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="background-color:gainsboro">
        @RenderBody()
        <hr />
        <footer>
            <p>@*&copy; @DateTime.Now.Year - My ASP.NET Application*@</p> <br />
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

